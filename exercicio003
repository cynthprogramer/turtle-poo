#4) desenhar dois quadrados
turtle.shape('circle')
for color in ['black', 'red', 'pink', 'blue']:
    turtle.color(color)
    turtle.forward(100)
    turtle.right(90)
def saltar(i):
  turtle.up()
  turtle.forward(i)
  turtle.down()
  turtle.right(60)

